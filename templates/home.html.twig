{% extends 'base.html.twig' %}



{% block body %}
<div class="container" style="margin-top: 20px;">
    {% if facts|length > 0 %}
        {% for fact in facts %}
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ fact.title }}</h5>
                    <p class="card-text">
                        {{ fact.message }}
                    </p>
                    <div class="text-right"><i>{{ fact.createdAt|date('d/m/Y') }}</i></div>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <a href="{{ path('newFact') }}">Inaugurez votre journal !</a>
    {% endif %}

</div>

{% endblock %}
