{% extends 'base.html.twig' %}



{% block body %}
<div class="container" style="margin-top: 20px;">
    <div class="col-4">
        {{ form(filterForm) }}
    </div>

    {% if facts|length > 0 %}
        {% for fact in facts %}
            <div class="card">
                <div class="text-right">
                    <form method="post" action="{{ path('deleteFact',{fact: fact.id}) }}">
                        <button type="submit" class="btn btn-danger">X</button>
                    </form>
                </div>
                <div class="card-body">
                        <h5 class="card-title">{{ fact.title }}</h5>

                    <p class="card-text">
                        {{ fact.message }}
                    </p>
                    <div class="text-right"><i>{{ fact.createdAt|date('d/m/Y') }}</i></div>
                </div>
            </div>
        {% endfor %}
    {% else %}
      Aucun r√©sultat...
    {% endif %}

</div>

{% endblock %}
